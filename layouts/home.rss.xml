{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ if .Site.Title }}{{ .Site.Title }}{{ else }}DevOps Toolkit{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ if .Site.Params.description }}{{ .Site.Params.description }}{{ else }}Latest posts from DevOps Toolkit{{ end }}</description>
    <generator>Hugo</generator>
    <language>{{ .Site.Language.LanguageCode }}</language>
    <atom:link href="{{ .Permalink }}index.xml" rel="self" type="application/rss+xml"/>
    {{- /* Get all pages recursively from all sections */}}
    {{- $allPages := slice }}
    {{- range .Site.Sections }}
      {{- range .Pages }}
        {{- if and (not .Draft) (.Date) (gt .Date.Year 2020) }}
          {{- $allPages = $allPages | append . }}
        {{- end }}
      {{- end }}
    {{- end }}
    {{- $pages := sort $allPages "Date" "desc" }}
    {{- /* Limit to RSS limit setting or 20 by default */}}
    {{- $limit := .Site.Config.Services.RSS.Limit | default 20 }}
    {{- $pages = $pages | first $limit }}
    {{- range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
      <guid>{{ .Permalink }}</guid>
      <description>{{ .Summary | html }}</description>
    </item>
    {{- end }}
  </channel>
</rss>